<%- include('partials/header.ejs'); -%>

<section class="home content-pad">
    <h1>Home</h1>
    <p><%= homeContent %></p> 
    <div>
        <% if(blogPost.length > 0){ %>
            <% blogPost.forEach(blog => { %>
                <h1><%= blog.title %></h1>
                <p><%= blog.post.substring(0, 100) %>  ...  <a href="/blogs/<%= blog.link_title %>">read more</a> </p>
            <% }) %>
        <% } else { %>
            <p>no post to show</p>
        <% } %>
    </div>
</section>


